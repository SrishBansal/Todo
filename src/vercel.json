{
    "version": 2,
    "platforms": ["@vercel/node"],
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node",
            "config" : {
                "includefiles" : [
                    "prisma/schema.prisma",
                    "node_modules/.prisma/client/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        }
    ]
}